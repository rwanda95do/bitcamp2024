package homework;

import java.util.Scanner;

public class Salary {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		//[문제] 월급 계산 프로그램
		//이름, 직급, 기본급, 수당을 입력하여 합계, 세금, 월급을 출력하시오    
		String name, rank, BasicPay, ExtraPay;
		int tot=0, tax=0, salary=0;
		
		Scanner scan = new Scanner(System.in);
		System.out.print(scan);
		
		//합계 = 기본급 + 수당
		//세금 = 합계 * 세율
		//월급 = 합계 - 세금

		//[조건]
		//1. 조건 연산자 이용
		//합계가 5,000,000원 이상이면 3% (0.03)
		//     3,000,000원 이상이면 2% (0.02)
		//     아니면 1% (0.01)
		//2. 숫자는 3자리마다 , 표시
		//3. 소수이하는 표시하지 않는다. (정수형)  

		//[실행결과]
		//이름 입력 : 홍길동
		//직급 입력 : 부장
		//기본급 입력 : 4900000
		//수당 입력 : 200000

		//*** 홍길동 부장 월급 ***
		//기본급 : 4,900,000원
		//수당 : 200,000원
		//합계 : 5,100,000원
		//세금 : 153,000원
		//월급 : 4,947,000원
	}

}
